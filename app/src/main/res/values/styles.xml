<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
		<item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
		<item name="android:indeterminate">true</item>
		<item name="indicatorSize">@dimen/size_progress_indicator</item>
	</style>

	<style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
		<item name="colorPrimary">@color/color_accent</item>
	</style>

	<style name="Theme.LinenAssignment.List.Separator" parent="Theme.LinenAssignment">
		<item name="android:textSize">@dimen/text_size_large</item>
		<item name="android:textColor">@color/color_on_primary_container</item>
	</style>

	<style name="Theme.LinenAssignment.Text.Title" parent="Theme.LinenAssignment">
		<item name="android:textSize">@dimen/text_size_large</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Theme.LinenAssignment.Text.Sub" parent="Theme.LinenAssignment">
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:textColor">@color/color_on_surface_variant</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Theme.LinenAssignment.SwipeProgress" parent="Theme.LinenAssignment">
		<item name="indicatorColor">@color/color_secondary</item>
		<item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">
			@color/color_secondary_container
		</item>
	</style>

	<style name="Theme.LinenAssignment.List.Card" parent="Theme.LinenAssignment">
		<item name="cardElevation">1dp</item>
		<item name="strokeWidth">0dp</item>
		<item name="contentPaddingBottom">@dimen/space_normal</item>
		<item name="contentPaddingLeft">@dimen/space_normal</item>
		<item name="contentPaddingRight">@dimen/space_normal</item>
		<item name="contentPaddingTop">@dimen/space_normal</item>
		<item name="cornerRadius">4dp</item>
	</style>

</resources>